    <Application x:Class="MyTube_Music.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:Icon="http://metro.mahapps.com/winfx/xaml/iconpacks"
             xmlns:local="clr-namespace:MyTube_Music"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <Style x:Name="MenuButtonCustom" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Width" Value="60"/>
            <Setter Property="Height" Value="60"/>
            <Setter Property="Margin" Value="15 15 15 15"/>
        </Style>



        <Style x:Name="MenuButtonIconCustom" TargetType="Icon:PackIconMaterial">
            <Setter Property="FontSize" Value="30"/>
        </Style>
    </Application.Resources>
</Application>
